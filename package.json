{
  "name": "second-brain",
  "type": "module",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev": "pnpm --filter @second-brain/web dev",
    "build": "pnpm --filter @second-brain/web build",
    "typecheck": "pnpm --filter @second-brain/web typecheck",
    "lint": "pnpm --filter @second-brain/web lint",
    "lint:fix": "pnpm --filter @second-brain/web lint:fix",
    "test:unit": "pnpm --filter @second-brain/web test:unit",
    "test:e2e": "pnpm --filter @second-brain/web test:e2e",
    "test": "pnpm --filter @second-brain/web test",
    "cleanup": "rm -rf .nuxt .output node_modules/.cache && git worktree list --porcelain | grep '^worktree' | grep -v \"$(pwd)$\" | cut -d' ' -f2 | xargs -I {} git worktree remove --force {} 2>/dev/null; rm -rf .worktrees",
    "prepare": "husky",
    "ralph": "./scripts/ralph/ralph.sh"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "yaml": "^2.8.2"
  }
}
